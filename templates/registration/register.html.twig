{% extends 'layout/not_logged_layout.html.twig' %}

{% block title %}Register{% endblock %}
{% block body_id 'register' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block main %}

    <div class="col-sm-5 card bg-light mb-3">
            <div class="card-body">
            {{ form_start(registrationForm) }}
            <form name="registration_form" method="post">
            <fieldset>
                <legend><i class="fas fa-user-plus" aria-hidden="true"></i> {{ 'Register a new User'|trans }}</legend>
                <div class="form-group">
                    {{ form_row(registrationForm.username, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.plainPassword, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'Register'|trans }}
                </button>  
            </fieldset>
            {{ form_end(registrationForm) }}
        </div>
    </div>

{% endblock %}
